<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".views.RegisterSuccessActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginHorizontal="16dp">
        <RelativeLayout
            android:id="@+id/rlTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/heading_sm_bold"
                android:layout_marginTop="15dp"
                android:text="@string/akun_berhasil_dibuat"
                android:textColor="@color/black"/>
        </RelativeLayout>


        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rlTitle"
            style="@style/body_md_regular"
            android:layout_marginTop="16dp"
            android:text="Terima kasih sudah membuat akun. Klik untuk \nmemulai pakai Setaman!"
            android:textColor="@color/gray_500"/>

        <LinearLayout
            android:id="@+id/layoutGif"
            android:layout_width="wrap_content"
            android:layout_height="250dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:background="@color/black">
            <pl.droidsonroids.gif.GifImageView
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:src="@drawable/success"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llBtn"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_alignParentBottom="true">
            <Button
                android:id="@+id/btnLogin"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                style="@style/label_lg_bold"
                android:layout_marginBottom="16dp"
                android:text="@string/mulai_pakai_setaman"
                android:textColor="@color/text_tertiary"
                android:textAllCaps="false"
                android:background="@drawable/rounded_success_button"/>
        </LinearLayout>

    </RelativeLayout>



</RelativeLayout>